<h1><%= @list.name %></h1>

<ol>
  <% if @pages %>
    <% @pages.each do |page| %>
      <li>
        <h2><%= link_to page.name, notebook_page_path(@notebook, page) %></h2>
      </li>
    <% end %>
  <% end %>
</ol>

<p>
  <%= link_to "Back to #{@notebook.name}", @notebook, class: "button" %>
  <%= link_to "Edit #{@list.name}", edit_notebook_list_path(@notebook, @list), class: "button" %>
  <%= link_to "Delete #{@list.name}", notebook_list_path(@notebook, @list), method: :delete, 
              data: { confirm: "Are you sure you want to delete #{@list.name}?" }, class: "button" %>
    
</p>
