
<article>
  <h1><%= @page.name %></h1>
  <p><%= @page.content %></p>    
</article>

<div>
  <p>
    <%= link_to "Back to #{@notebook.name}", @notebook, class: "button" %>
    <%= link_to "Edit", edit_notebook_page_path(@notebook, @page), class: "button" %>
    <%= link_to "Delete", notebook_page_path(@notebook, @page), method: :delete, 
                 data: { confirm: "Are you sure you want to delete #{@page.name}?" }, class: "button" %>
  </p>
</div>

